{
  "schema": {
    "title": "Activités maritimes en rade de Brest",
    "type": "object",
    "required": [
      "origin",
      "date",
      "bbox",
      "questions"
    ],
    "options": {
      "disable_edit_json": true,
      "disable_properties": true
    },
    "properties": {
      "origin": {
        "title": "Origine",
        "type": "string",
        "format": "grid-strict",
        "description": "Application émettrice",
        "options": {
          "grid_columns": 5
        },
        "default": "Smaug"
      },
      "date": {
        "title": "Date",
        "id": "date",
        "type": "object",
        "format": "grid-strict",
        "options": {
          "disable_edit_json": true,
          "disable_properties": true,
          "grid_columns": 3
        },
        "properties": {
          "Entrez la date :": {
            "type": "string",
            "format": "date",
            "options": {
              "grid_columns": 2,
              "inputAttributes": {
                "placeholder": "Enter date"
              },
              "flatpickr": {
                "inlineHideInput": true,
                "wrap": true,
                "allowInput": true
              }
            }
          }
        }
      },
      "bbox": {
        "type": "object",
        "title": "Zone géographique de travail",
        "format": "grid-strict",
        "options": {
          "disable_edit_json": true,
          "disable_properties": true
        },
        "properties": {
          "s": {
            "title": "Latitude sud",
            "type": "number",
            "options": {
              "grid_columns": 3
            },
            "default": 48.26
          },
          "w": {
            "title": "Longitude ouest",
            "type": "number",
            "options": {
              "grid_columns": 3
            },
            "default": -4.56
          },
          "n": {
            "title": "Latitude nord",
            "type": "number",
            "options": {
              "grid_columns": 3
            },
            "default": 48.43
          },
          "e": {
            "title": "Longitude est",
            "type": "number",
            "options": {
              "grid_columns": 3
            },
            "default": -4.3
          }
        }
      },
      "questions": {
        "title": "Questions",
        "type": "array",
        "items": {
          "type": "object",
          "title": "Question",
          "options": {
            "disable_edit_json": true,
            "disable_properties": true
          },
          "properties": {
            "texte": {
              "type": "string",
              "title": "Texte",
              "description": "Rédiger le corps de la question"
            },
            "layers": {
              "type": "string",
              "title": "Imagerie sur le terrain ",
              "description": "Sélectionner une couche",
              "enum": [
                "S57:depare",
                "assetId: 361158",
                "ESRI"
              ],
              "default": ""
            },
            "balisage": {
              "type": "string",
              "format": "radio",
              "title": "Balisage",
              "enum": [
                "oui",
                "non"
              ]
            },
            "target": {
              "type": "string",
              "title": "Objet piloté dans NaVisu4D",
              "description": "Sélectionner un objet",
              "enum": [
                "camera",
                "ship",
                "drone"
              ],
              "default": "camera"
            },
            "cmd": {
              "type": "string",
              "title": "Commande de l'objet dans NaVisu4D",
              "description": "Sélectionner une action",
              "enum": [
                "move",
                "goTo"
              ],
              "default": "goTo"
            },
            "responses": {
              "type": "object",
              "title": "Réponse",
              "options": {
                "disable_edit_json": true,
                "disable_properties": true
              },
              "properties": {
                "texte": {
                  "type": "string",
                  "title": "Texte",
                  "description": "Rédiger le corps de la réponse"
                },
                "Images": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "title": "Image",
                    "format": "grid",
                    "options": {
                      "disable_edit_json": true,
                      "disable_properties": true
                    },
                    "properties": {
                      "file": {
                        "type": "string",
                        "title": "file",
                        "media": {
                          "binaryEncoding": "base64",
                          "type": "img/png"
                        },
                        "options": {
                          "grid_columns": 6,
                          "multiple": true
                        }
                      },
                      "description": {
                        "type": "string",
                        "title": "Description",
                        "options": {
                          "grid_columns": 6
                        }
                      },
                      "position": {
                        "type": "object",
                        "title": "Position de l'image",
                        "format": "grid-strict",
                        "options": {
                          "disable_edit_json": true,
                          "disable_properties": true
                        },
                        "properties": {
                          "lat": {
                            "title": "Latitude ",
                            "type": "number",
                            "options": {
                              "grid_columns": 3
                            }
                          },
                          "lon": {
                            "title": "Longitude ",
                            "type": "number",
                            "options": {
                              "grid_columns": 3
                            }
                          }
                        }
                      }
                    }
                  }
                },
                "Videos": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "title": "Vidéos",

                    "format": "grid",
                    "options": {
                      "disable_edit_json": true,
                      "disable_properties": true
                    },
                    "properties": {
                      "file": {
                        "type": "string",
                        "title": "file",
                        "media": {
                          "binaryEncoding": "base64",
                          "type": "mp4"
                        },
                        "options": {
                          "grid_columns": 6,
                          "multiple": true
                        }
                      },
                      "description": {
                        "type": "string",
                        "title": "Description",
                        "options": {
                          "grid_columns": 6
                        }
                      },
                      "position": {
                        "type": "object",
                        "title": "Position de la video",
                        "format": "grid-strict",
                        "options": {
                          "disable_edit_json": true,
                          "disable_properties": true
                        },
                        "properties": {
                          "lat": {
                            "title": "Latitude ",
                            "type": "number",
                            "options": {
                              "grid_columns": 3
                            }
                          },
                          "lon": {
                            "title": "Longitude ",
                            "type": "number",
                            "options": {
                              "grid_columns": 3
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "theme": "bootstrap4",
  "iconlib": "fontawesome4"

}
