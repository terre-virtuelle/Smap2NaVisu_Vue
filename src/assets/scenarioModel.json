{
  "schema":  {
    "title": "Scénario du Centre Nautique",
    "type": "object",
     "description": "Différentes activités maritimes existent en Rade de Brest. Pour les découvrir, suivez les indications ci-dessous et répondez aux quelques questions. ",
    "format": "grid",
    "required": [
      "origin",
      "date",
      "bbox",
      "questions"
    ],
   "options": {
      "disable_edit_json": true,
      "disable_properties": true
    },
    "properties": {
       "cmd": {
        "title": "Type",
        "type": "string",
        "description": "Mot clé réservé, ne pas modifier",
        "enum": [
          "scenario"
        ]
      },
      "title": {
        "title": "Titre",
        "type": "string",
        "format": "grid-strict",
        "description": "Intitulé du scénario",
        "options": {
          "grid_columns": 5
        },
        "default": "Activités maritimes en rade de Brest"
      },
      "origin": {
        "title": "Origine",
        "type": "string",
        "format": "grid-strict",
        "description": "Application émettrice",
        "options": {
          "grid_columns": 5
        },
        "default": "Terre Virtuelle"
      },
      "date": {
        "title": "Entrez la date",
        "id": "date",
        "type": "object",
        "format": "grid-strict",
        "options": {
          "disable_edit_json": true,
          "disable_properties": true,
          "grid_columns": 3
        },
        "properties": {
          "date :": {
            "type": "string",
            "format": "date",
            "options": {
              "grid_columns": 2,
              "inputAttributes": {
                "placeholder": "Enter date"
              },
              "flatpickr": {
                "inlineHideInput": true,
                "wrap": true,
                "allowInput": true
              }
            }
          }
        }
      },
      "bbox": {
        "type": "object",
        "title": "Zone géographique de travail",
        "format": "grid-strict",
        "options": {
          "disable_edit_json": true,
          "disable_properties": true
        },
        "properties": {
          "s": {
            "title": "Latitude sud",
            "type": "number",
            "options": {
              "grid_columns": 3
            },
            "default": 48.26
          },
          "w": {
            "title": "Longitude ouest",
            "type": "number",
            "options": {
              "grid_columns": 3
            },
            "default": -4.56
          },
          "n": {
            "title": "Latitude nord",
            "type": "number",
            "options": {
              "grid_columns": 3
            },
            "default": 48.43
          },
          "e": {
            "title": "Longitude est",
            "type": "number",
            "options": {
              "grid_columns": 3
            },
            "default": -4.3
          }
        }
      },
      "questions": {
        "title": "Questions",
        "type": "array",
        "items": {
          "type": "object",
          "title": "Question",
          "options": {
            "disable_edit_json": true,
            "disable_properties": true
          },
           "properties": {
              "position": {
                        "type": "object",
                        "title": "Position de départ",
                        "format": "grid-strict",
                        "options": {
                          "disable_edit_json": true,
                          "disable_properties": true
                        },
                        "properties": {
                          "lat": {
                            "title": "Latitude ",
                            "type": "number",
                            "description": "Degrés décimaux",
                            "options": {
                              "grid_columns": 3
                            }
                          },
                          "lon": {
                            "title": "Longitude ",
                            "type": "number",
                            "options": {
                              "grid_columns": 3
                            }
                          }
                        }
          },
            "text": {
              "type": "string",
              "title": "Texte",
              "description": "Rédiger le corps de la question"
            },
            "layers": {
              "type": "string",
              "title": "Imagerie sur le terrain ",
              "description": "Sélectionner une couche",
              "enum": [
                "Bing",
                "S57:depare",
                "7400",
                "OpenTopoMap",
                "EMODNet bathymetry",
                "GEBCO bathymetry",
                "Zones de Pêche",
                "Cultures Maritimes",
                "Sedimentology"
              ],
              "default": "Bing"
            },
            "weather": {
              "type": "string",
              "title": "Environnement ",
              "description": "Sélectionner un outil",
              "enum": [
                "Brouillard",
                "Pluie",
                "Neige",
                "Beau temps"
              ],
              "default": ""
            },
            "buoyage": {
              "type": "string",
              "format": "radio",
              "title": "Balisage",
              "enum": [
                "non",
                "oui"
              ]
            },
            "target": {
              "type": "string",
              "title": "Objet piloté dans NaVisu4D",
              "description": "Sélectionner un objet",
              "enum": [
                "camera",
                "ship",
                "camera+ship"
              ],
              "default": "ship"
            },
            "cmd": {
              "type": "string",
              "title": "Commande de l'objet dans NaVisu4D",
              "description": "Sélectionner une action :",
              "enum": [
                "track",
                "goTo",
                "moveTo",
                "flyTo"
              ],
              "default": "goTo"
            },
            "response": {
              "type": "object",
              "title": "Réponse",
              "options": {
                "disable_edit_json": true,
                "disable_properties": true
              },
              "properties": {
                "position": {
                        "type": "object",
                        "title": "Position d'arrivée",
                        "format": "grid-strict",
                        "options": {
                          "disable_edit_json": true,
                          "disable_properties": true
                        },
                        "properties": {
                          "lat": {
                            "title": "Latitude ",
                            "type": "number",
                            "description": "Degrés décimaux",
                            "options": {
                              "grid_columns": 3
                            }
                          },
                          "lon": {
                            "title": "Longitude ",
                            "type": "number",
                            "options": {
                              "grid_columns": 3
                            }
                          }
                        }
                },
                "text": {
                  "type": "string",
                  "title": "Texte",
                  "description": "Rédiger le corps de la réponse"
                },
                "Images": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "title": "Image",
                    "format": "grid",
                    "options": {
                      "disable_edit_json": true,
                      "disable_properties": true
                    },
                    "properties": {
                      "file": {
                        "type": "string",
                        "title": "file",
                        "media": {
                          "binaryEncoding": "base64",
                          "type": "img/png"
                        },
                        "options": {
                          "grid_columns": 6,
                          "multiple": true
                        }
                      },
                      "description": {
                        "type": "string",
                        "title": "Description",
                        "options": {
                          "grid_columns": 6
                        }
                      },
                      "position": {
                        "type": "object",
                        "title": "Position de l'image",
                        "format": "grid-strict",
                        "options": {
                          "disable_edit_json": true,
                          "disable_properties": true
                        },
                        "properties": {
                          "lat": {
                            "title": "Latitude ",
                            "type": "number",
                            "options": {
                              "grid_columns": 3
                            }
                          },
                          "lon": {
                            "title": "Longitude ",
                            "type": "number",
                            "options": {
                              "grid_columns": 3
                            }
                          }
                        }
                      }
                    }
                  }
                },
                "Videos": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "title": "Vidéos",
                    "format": "grid",
                    "options": {
                      "disable_edit_json": true,
                      "disable_properties": true
                    },
                    "properties": {
                      "file": {
                        "type": "string",
                        "title": "file",
                        "media": {
                          "binaryEncoding": "base64",
                          "type": "mp4"
                        },
                        "options": {
                          "grid_columns": 6,
                          "multiple": true
                        }
                      },
                      "description": {
                        "type": "string",
                        "title": "Description",
                        "options": {
                          "grid_columns": 6
                        }
                      },
                      "position": {
                        "type": "object",
                        "title": "Position de la video",
                        "format": "grid-strict",
                        "options": {
                          "disable_edit_json": true,
                          "disable_properties": true
                        },
                        "properties": {
                          "lat": {
                            "title": "Latitude ",
                            "type": "number",
                            "options": {
                              "grid_columns": 3
                            }
                          },
                          "lon": {
                            "title": "Longitude ",
                            "type": "number",
                            "options": {
                              "grid_columns": 3
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "theme": "bootstrap4",
  "iconlib": "fontawesome4"

}
